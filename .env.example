# ============================================================================
# REEYO BACKEND - ENVIRONMENT VARIABLES
# ============================================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env file to version control

# ============================================================================
# NODE ENVIRONMENT
# ============================================================================
NODE_ENV=development

# ============================================================================
# AWS CONFIGURATION
# ============================================================================
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# DynamoDB
DYNAMODB_TABLE=ReeYo-Development
DYNAMODB_ENDPOINT=http://localhost:8000

# S3 (for file uploads)
S3_BUCKET_NAME=reeyo-uploads-dev
S3_REGION=us-east-1

# ============================================================================
# REDIS CONFIGURATION
# ============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ============================================================================
# JWT CONFIGURATION
# ============================================================================
# IMPORTANT: Generate a secure random string (min 32 characters)
# You can use: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your_super_secret_jwt_key_at_least_32_characters_long_change_this
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# ============================================================================
# SECURITY
# ============================================================================
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ============================================================================
# CORS CONFIGURATION
# ============================================================================
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:19006,http://localhost:19000

# ============================================================================
# CAMPAY PAYMENT GATEWAY (Cameroon Mobile Money)
# ============================================================================
CAMPAY_BASE_URL=https://api.campay.net/v1
CAMPAY_USERNAME=your_campay_username
CAMPAY_PASSWORD=your_campay_password
CAMPAY_APP_KEY=your_campay_app_key

# ============================================================================
# TWILIO (SMS)
# ============================================================================
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+237XXXXXXXXX

# ============================================================================
# EMAIL CONFIGURATION
# ============================================================================
FROM_EMAIL=noreply@reeyo.cm

# Option 1: SendGrid
SENDGRID_API_KEY=your_sendgrid_api_key

# Option 2: Custom SMTP
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_smtp_username
SMTP_PASSWORD=your_smtp_password

# ============================================================================
# AWS SNS (Push Notifications)
# ============================================================================
SNS_PLATFORM_APPLICATION_ARN=arn:aws:sns:us-east-1:xxxxxxxxxxxx:app/GCM/ReeYo
SNS_REGION=us-east-1

# ============================================================================
# LOGGING
# ============================================================================
LOG_LEVEL=debug

# ============================================================================
# BUSINESS CONFIGURATION
# ============================================================================
# Commission Rates (percentage)
DEFAULT_FOOD_COMMISSION=15
DEFAULT_MART_COMMISSION=10
DEFAULT_PACKAGE_PLATFORM_FEE=20

# Minimum Amounts (XAF)
MINIMUM_PAYOUT_AMOUNT=50000
MIN_ORDER_VALUE=1000

# Delivery
BASE_DELIVERY_FEE=1500
PACKAGE_BASE_FEE=2000
PACKAGE_FEE_PER_KM=500
MAX_DELIVERY_DISTANCE=50
RIDER_SEARCH_RADIUS=5

# Business Constraints
MAX_MENU_ITEMS=500
MAX_ORDER_ITEMS=50
MAX_IMAGE_SIZE_MB=5
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp

# ============================================================================
# API PORTS (for local development)
# ============================================================================
USER_API_PORT=3001
VENDOR_API_PORT=3002
RIDER_API_PORT=3003
ADMIN_API_PORT=3004
SOCKET_PORT=3005

# ============================================================================
# FEATURE FLAGS
# ============================================================================
ENABLE_FOOD_SERVICE=true
ENABLE_MART_SERVICE=false
ENABLE_PACKAGE_SERVICE=false

# ============================================================================
# MONITORING & ANALYTICS
# ============================================================================
# Sentry (Error Tracking)
SENTRY_DSN=

# Google Analytics
GA_TRACKING_ID=

# ============================================================================
# RATE LIMITING
# ============================================================================
# Auth endpoints
AUTH_RATE_LIMIT_WINDOW=900000
AUTH_RATE_LIMIT_MAX_REQUESTS=5

# API endpoints
API_RATE_LIMIT_WINDOW=900000
API_RATE_LIMIT_MAX_REQUESTS=100

# ============================================================================
# SESSION CONFIGURATION
# ============================================================================
SESSION_SECRET=your_session_secret_change_this
SESSION_MAX_AGE=86400000

# ============================================================================
# FRONTEND URLS (for emails and redirects)
# ============================================================================
FRONTEND_URL=http://localhost:3000
VENDOR_DASHBOARD_URL=http://localhost:3000/vendor
RIDER_APP_URL=http://localhost:3000/rider
ADMIN_DASHBOARD_URL=http://localhost:3000/admin

# ============================================================================
# WEBHOOK URLS
# ============================================================================
CAMPAY_WEBHOOK_URL=https://api.reeyo.cm/webhooks/campay
TWILIO_WEBHOOK_URL=https://api.reeyo.cm/webhooks/twilio