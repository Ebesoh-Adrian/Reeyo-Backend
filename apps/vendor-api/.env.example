# Server Configuration
NODE_ENV=development
PORT=3002
API_VERSION=v1

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-long-please-change-this
JWT_EXPIRES_IN=30d

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key

# DynamoDB Configuration
DYNAMODB_ENDPOINT=http://localhost:8000
DYNAMODB_TABLE_PREFIX=reeyo-dev

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Twilio Configuration (SMS)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# SendGrid Configuration (Email)
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@reeyo.cm
SENDGRID_FROM_NAME=Reeyo

# AWS S3 (File Storage)
S3_BUCKET_NAME=reeyo-uploads
S3_REGION=us-east-1

# AWS SNS (Push Notifications)
AWS_SNS_PLATFORM_APPLICATION_ARN_IOS=arn:aws:sns:us-east-1:123456789:app/APNS/reeyo-vendor-ios
AWS_SNS_PLATFORM_APPLICATION_ARN_ANDROID=arn:aws:sns:us-east-1:123456789:app/GCM/reeyo-vendor-android

# Socket Server
SOCKET_SERVER_URL=http://localhost:3004

# Business Configuration
MINIMUM_PAYOUT_AMOUNT=5000
COMMISSION_RATE=0.15
MAX_MENU_ITEMS=500
MAX_IMAGE_SIZE_MB=5

# CORS Configuration
CORS_ORIGIN=*

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=debug
LOG_FILE=logs/vendor-api.log

# File Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/jpg,application/pdf
