{
  "name": "@reeyo/rider-api",
  "version": "1.0.0",
  "description": "Rider API for Reeyo delivery platform",
  "main": "dist/server.js",
  "types": "dist/server.d.ts",
  "private": true,
  "license": "PROPRIETARY",
  "exports": {
    ".": {
      "import": "./dist/server.js",
      "require": "./dist/server.js"
    }
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "dev": "tsx src/server.ts",
    "dev:watch": "nodemon --exec tsx src/server.ts",
    "build": "tsc --pretty",
    "build:clean": "rimraf dist && npm run build",
    "start": "node dist/server.js",
    "start:prod": "NODE_ENV=production node dist/server.js",
    "preview": "npm run build && npm run start",
    "lint": "eslint src --ext .ts --max-warnings 0",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "type-check": "tsc --noEmit",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:debug": "node --inspect-brk node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config jest.e2e.config.js",
    "clean": "rimraf dist coverage",
    "verify": "npm run lint && npm run type-check && npm run test"
  },
  "keywords": [
    "reeyo",
    "rider",
    "delivery",
    "logistics",
    "api"
  ],
  "author": "CodersHub Innovations",
  "repository": {
    "type": "git",
    "url": "https://github.com/coderswithoutborders/reeyo-rider-api"
  },
  "bugs": {
    "url": "https://github.com/coderswithoutborders/reeyo-rider-api/issues"
  }
}