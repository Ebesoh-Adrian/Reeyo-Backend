# Server Configuration
NODE_ENV=development
PORT=3001
API_VERSION=v1

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=30d

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# DynamoDB Configuration
DYNAMODB_ENDPOINT=http://localhost:8000
DYNAMODB_TABLE_PREFIX=reeyo-dev

# Redis Configuration (for caching & sessions)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Socket.io Server (Real-time updates)
SOCKET_SERVER_URL=http://localhost:3004

# Logging
LOG_LEVEL=debug
LOG_FILE_PATH=./logs/user-api.log

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Campay Payment (Mobile Money)
CAMPAY_APP_USERNAME=your-campay-username
CAMPAY_APP_PASSWORD=your-campay-password
CAMPAY_API_URL=https://api.campay.net/api

# Twilio (SMS for OTP)
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+1234567890

# SendGrid (Email notifications)
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM_EMAIL=noreply@reeyo.cm

# AWS SNS (Push notifications)
SNS_PLATFORM_APPLICATION_ARN=arn:aws:sns:us-east-1:123456789:app/GCM/ReeyoUser

# File Upload
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/jpg

# Business Configuration
DELIVERY_FEE_BASE=1000
DELIVERY_FEE_PER_KM=200
MIN_ORDER_AMOUNT=500
MAX_ORDER_AMOUNT=500000
FREE_DELIVERY_THRESHOLD=10000
PLATFORM_COMMISSION_PERCENTAGE=15
