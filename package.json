{
  "name": "reeyo-platform",
  "version": "1.0.0",
  "private": true,
  "description": "Reeyo Delivery Platform - Complete Monorepo",
  "author": "Reeyo Team",
  "license": "MIT",
  "workspaces": [
    "apps/*",
    "libs/*"
  ],
  "scripts": {
    "dev:user": "npm run dev --workspace=@reeyo/user-api",
    "dev:vendor": "npm run dev --workspace=@reeyo/vendor-api",
    "dev:rider": "npm run dev --workspace=@reeyo/rider-api",
    "dev:admin": "npm run dev --workspace=@reeyo/admin-api",
    "dev:dashboard": "npm run dev --workspace=reeyo-admin-dashboard",
    "dev:socket": "npm run dev --workspace=@reeyo/socket-server",
    "build:all": "npm run build --workspaces",
    "start:all": "pm2 start ecosystem.config.js",
    "stop:all": "pm2 stop all",
    "test:all": "npm run test --workspaces",
    "lint:all": "npm run lint --workspaces",
    "clean": "rm -rf node_modules apps/*/node_modules libs/*/node_modules apps/*/dist libs/*/dist"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "typescript": "^5.3.3",
    "eslint": "^8.56.0",
    "prettier": "^3.1.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
