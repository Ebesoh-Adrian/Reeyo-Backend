{
  "name": "reeyo-platform",
  "version": "1.0.0",
  "private": true,
  "description": "Reeyo Delivery Platform - Complete Monorepo",
  "author": "Reeyo Team",
  "license": "MIT",
  "workspaces": [
    "apps/*",
    "libs/*"
  ],
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "dev:user": "npm run dev --workspace=@reeyo/user-api",
    "dev:vendor": "npm run dev --workspace=@reeyo/vendor-api",
    "dev:rider": "npm run dev --workspace=@reeyo/rider-api",
    "dev:admin": "npm run dev --workspace=@reeyo/admin-api",
    "build:all": "npm run build --workspaces",
    "start:all": "pm2 start ecosystem.config.js",
    "stop:all": "pm2 stop all",
    "test:all": "npm run test --workspaces",
    "lint:all": "npm run lint --workspaces",
    "clean": "rm -rf node_modules apps/*/dist libs/*/dist"
  },
  "dependencies": {
    "express": "^4.18.2",
    "morgan": "^1.10.0",
    "helmet": "^7.1.0",
    "cors": "^2.8.5",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "express-validator": "^7.0.1",
    "express-rate-limit": "^7.1.5",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "bcrypt": "^5.1.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "uuid": "^9.0.1",
    "dotenv": "^16.3.1",
    "@aws-sdk/client-dynamodb": "^3.474.0",
    "@aws-sdk/lib-dynamodb": "^3.474.0",
    "@aws-sdk/client-s3": "^3.474.0",
    "@aws-sdk/client-sns": "^3.474.0",
    "@aws-sdk/client-sqs": "^3.474.0",
    "aws-sdk": "^2.1498.0",
    "ioredis": "^5.3.2",
    "redis": "^4.6.12",
    "socket.io": "^4.7.2",
    "socket.io-client": "^4.7.2",
    "date-fns": "^3.0.6",
    "nodemailer": "^6.9.7",
    "twilio": "^4.19.3",
    "multer": "^1.4.5-lts.1",
    "node-fetch": "^2.7.0",
    "axios": "^1.6.5",
    "joi": "^17.11.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "exceljs": "^4.4.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.6",
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.9",
    "@types/helmet": "^4.0.0",
    "@types/cors": "^2.8.17",
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.6",
    "@types/bcrypt": "^5.0.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/uuid": "^9.0.7",
    "@types/nodemailer": "^6.4.14",
    "@types/multer": "^1.4.11",
    "@types/jest": "^29.5.11",
    "@types/supertest": "^6.0.2",
    "typescript": "^5.3.3",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsx": "^4.7.0",
    "nodemon": "^3.0.2",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "prettier": "^3.1.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "supertest": "^6.3.3",
    "rimraf": "^5.0.5"
  }
}


