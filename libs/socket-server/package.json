    "test": "jest",
    "test:watch": "jest --watch",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "websocket",
    "socket.io",
    "real-time",
    "tracking",
    "notifications"
  ],
  "author": "Reeyo Team",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
