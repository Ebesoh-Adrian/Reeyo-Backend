{
  "name": "@reeyo/socket-server",
  "version": "1.0.0",
  "description": "Real-time WebSocket server for live tracking and notifications",
  "main": "dist/server.js",
  "types": "dist/server.d.ts",
  "private": true,
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "dev": "ts-node-dev --respawn --transpile-only server.ts",
